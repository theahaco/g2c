---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <a id="preview-banner" style="display:none" target="_blank" rel="noopener"></a>
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";

  #preview-banner {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    display: none;
    background: #e11d48;
    color: #fff;
    font-size: 0.95rem;
    font-weight: 700;
    padding: 0.5rem 1rem;
    text-align: center;
    text-decoration: none;
    z-index: 9999;
  }

  #preview-banner:hover {
    background: #be123c;
  }

  body:has(#preview-banner[style*="display: block"]) {
    padding-top: 2.2rem;
  }
</style>

<script>
  const sub = window.location.hostname.split(".")[0];
  const match = sub.match(/(?:--)?pr-(\d+)$/);
  if (match) {
    const prNum = match[1];
    const banner = document.getElementById("preview-banner") as HTMLAnchorElement;
    banner.textContent = `Preview PR #${prNum}`;
    banner.href = `https://github.com/theahaco/g2c/pull/${prNum}`;
    banner.style.display = "block";
  }
</script>
