---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <a id="preview-banner" style="display:none" target="_blank" rel="noopener"></a>
    <div id="webview-warning" style="display:none">
      <p>Passkeys are not supported in in-app browsers.</p>
      <p>Tap the menu (<strong>&middot;&middot;&middot;</strong>) and choose <strong>"Open in Safari"</strong> or <strong>"Open in Browser"</strong>.</p>
    </div>
    <a href="https://github.com/theahaco/g2c" target="_blank" rel="noopener" class="github-link" title="View on GitHub">
      <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0016 8c0-4.42-3.58-8-8-8z"/></svg>
    </a>
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";

  #preview-banner {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    display: none;
    background: #e11d48;
    color: #fff;
    font-size: 0.95rem;
    font-weight: 700;
    padding: 0.5rem 1rem;
    text-align: center;
    text-decoration: none;
    z-index: 9999;
  }

  #preview-banner:hover {
    background: #be123c;
  }

  body:has(#preview-banner[style*="display: block"]) {
    padding-top: 2.2rem;
  }

  #webview-warning {
    background: #78350f;
    border: 1px solid #a16207;
    border-radius: 6px;
    color: #fef3c7;
    padding: 0.75rem 1rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  #webview-warning p {
    margin: 0.25rem 0;
  }

  .github-link {
    position: fixed;
    top: 1rem;
    right: 1rem;
    color: #8899aa;
    transition: color 0.15s;
    z-index: 100;
  }

  .github-link:hover {
    color: #e0e0e0;
  }
</style>

<script>
  // Preview banner
  const sub = window.location.hostname.split(".")[0];
  const match = sub.match(/(?:--)?pr-(\d+)$/);
  if (match) {
    const prNum = match[1];
    const banner = document.getElementById("preview-banner") as HTMLAnchorElement;
    banner.textContent = `Preview PR #${prNum}`;
    banner.href = `https://github.com/theahaco/g2c/pull/${prNum}`;
    banner.style.display = "block";
  }

  // In-app WebView detection
  // Real Safari / SFSafariViewController always include both "Safari" and "Version/" in the UA.
  // WKWebViews (Twitter, Instagram, etc.) omit "Version/" even if they add "Safari".
  const ua = navigator.userAgent;
  const isIOS = /iPhone|iPad|iPod/.test(ua);
  const isInAppBrowser = (isIOS && (!/Safari/.test(ua) || !/Version\//.test(ua)))
    || /Twitter|Instagram|FBAN|FBAV|Line\//.test(ua)
    || !window.PublicKeyCredential;

  if (isInAppBrowser) {
    document.getElementById("webview-warning")!.style.display = "block";
  }
</script>
